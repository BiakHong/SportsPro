@model List<Product>
@{
    ViewBag.Title = "Product Manager";

}
<h1>Product Manager</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Price</th>
            <th>Release Date</th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var product in @Model)
        {
            <tr>
                <td>@product.ProductCode</td>
                <td>@product.Name</td>
                <td>@($"{product.Price:C}")</td>
                <td>@product.FormattedReleaseDate</td>
                <td>
                    <a asp-controller="Product" asp-action="Edit"
                       asp-route-id="@product.Id" class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-controller="Product" asp-action="Delete"
                       asp-route-id="@product.Id" class="btn btn-primary"
                       asp-route-slug="@product.Slug">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Product" asp-action="Add"
   class="btn btn-primary">Add Product</a>
